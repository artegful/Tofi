@model PassengersModel
@{
    ViewData["Title"] = "Trip search results";
    Layout = null;
}

<form asp-action="Trip" asp-controller="Trip" asp-anti-forgery="true" class="mt-3" method="post" enctype="multipart/form-data">

        <div id="pas-container" class="my-2">

            @for (int i = 0; i < Model.Passengers.Count; i++)
            {
            <section class="option-section p-3 my-2" @(i == 0 ? "id=first-pas" : "")>
                    <h3 class="head">Passenger @(i+1)</h3>
                    <div class="row">
                        <div class="col-sm">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="Name">Name</label>
                                <input type="text" asp-for="Passengers[i].Name" class="form-control"></input>
                                <span asp-validation-for="Passengers[i].Name" />
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="Surname">Surname</label>
                                <input type="text" asp-for="Passengers[i].Surname" class="form-control"></input>
                                <span asp-validation-for="Passengers[i].Surname" />

                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="MiddleName">Middle Name</label>
                                <input type="text" asp-for="Passengers[i].MiddleName" class="form-control"></input>
                            <span asp-validation-for="Passengers[i].MiddleName" />
                            </div>
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="BirthDate">Birthday</label>
                                <input type="date" asp-for="Passengers[i].BirthDate" class="form-control" />
                                <span asp-validation-for="Passengers[i].BirthDate" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="DocumentType">Document type</label>
                                @Html.DropDownListFor(x => x.Passengers[i].DocumentType, (SelectList)ViewBag.DocumentTypes, new { @class="form-control" })
                                <span asp-validation-for="Passengers[i].DocumentType" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="DocumentCode">Document Code</label>
                                <input type="text" asp-for="Passengers[i].DocumentCode" class="form-control" />
                                <span asp-validation-for="Passengers[i].DocumentCode" />
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    

    <div class="row my-3">
        <div class="col">
            <a class="btn btn-dark btn-outline-secondary" onclick="addOption()">
                Add
            </a>
            <a class="btn btn-dark btn-outline-secondary" onclick="removeOption()">
                Remove
            </a>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block mb-4">Reserve</button>
</form>


