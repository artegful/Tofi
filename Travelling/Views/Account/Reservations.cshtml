@model IEnumerable<Travelling.Models.Reservation>
@{
    ViewData["Title"] = "Search results";
    int carouselIndex = 1;
}

@foreach (var item in Model)
{
    <section class="my-3 option-section">
        <div class="row h-100">
            <div class="col-md-3">
                <div id="carousel-@carouselIndex" class="carousel slide preview h-100 w-100" data-bs-ride="carousel">
                    <div class="carousel-inner h-100 w-100">
                        @if (item.Option.Images.Count > 0)
                        {
                            @for (int i = 0; i < item.Option.Images.Count; i++)
                            {
                                string tag = i == 0 ? "active" : "";

                                <div class="carousel-item @tag w-100 h-100">
                                    <img class="w-100 h-100" src="@item.Option.Images[i].Uri">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img class="w-100 h-100" src="/img/placeholder.svg">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel-@(carouselIndex++)" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="col-md-9 p-4">
                <div class="row">
                    <div class="col-8">
                        <p>@item.Option.Name</p>
                        @if (item.Option.Description != null && item.Option.Description.Length > 0)
                        {
                            <p>@item.Option.Description</p>
                        }
                        <p>from @item.StartDate.ToShortDateString() to @item.EndDate.ToShortDateString()</p>
                    </div>
                    <div class="col-4 justify-content-center">
                        <div class="row">
                            <div class="col">
                                @(item.Option.Price)$
                            </div>
                            <div class="col">
                                @Html.ActionLink(
                                    "Open",
                                    "Option",
                                    "Hotels",
                                    new { offerId = item.Option.Offer.Id, optionId = item.Option.Id, isPreview = true },
                                    new { @class="btn btn-dark" });
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>
}
