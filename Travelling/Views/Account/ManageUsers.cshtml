@model IEnumerable<Travelling.Models.User>
@{
    ViewData["Title"] = "Users administration";
}

@{
    int carouselIndex = 0;
}

    <h2>Your Posted Offers</h2>
    @foreach (var user in Model)
    {
        <section class="my-3 option-section p-3">
            <div class="row justify-content-between align-content-center">
                <div class="col-9">
                    <row class="align-content-center h-100">
                        <div class="col">
                            <h6>@user.Email</h6>
                        <h6>@user.Name @user.Surname</h6>
                        </div>
                        <div class="col">
                            @user.Phone
                        </div>
                    </row>
                </div>
            <div class="col-auto align-content-center">
                @Html.ActionLink(
                "Delete",
                "Delete",
                "Account",
                new { userId = user.Id },
                new { @class="btn btn-danger" })
            </div>
            </div>
        </section>
    }