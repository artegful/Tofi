@{
    ViewData["Title"] = "Home Page";
}

@model Travelling.Models.RegisterModel

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h2>Sign Up</h2>
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Email">Email address</label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Phone">Phone</label>
        <input type="tel" asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Password">Password</label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="ConfirmPassword">Confirm password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" />
    </div>

    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign Up</button>
</form>