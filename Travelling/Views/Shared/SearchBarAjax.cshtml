@model Travelling.Models.LocationSearchArgs

<form asp-action="Search" asp-controller="Hotels" data-ajax="true" data-ajax-method="get"
      data-ajax-loading="#loading"
      data-ajax-mode="replace"
      data-ajax-update="#list"
      data-ajax-begin="onBegin">
    <div class="row">
        <div class="col-lg-6 px-lg-0 my-2">
            <input class="form-control" id="pac-input" type="text" asp-for="LocationAddress" style="width: 100%" placeholder="Location">
        </div>
        <div class="col-lg-3 my-2">
            <div class="row justify-content-between" style="height: 100%">
                <div class="col-6 px-lg-0">
                    <input class="form-control" type="date" asp-for="ArriveDate" placeholder="When arriving?">
                </div>
                <div class="col-6 px-lg-0">
                    <input class="form-control" type="date" asp-for="DepartureDate" placeholder="When arriving?">
                </div>
            </div>
        </div>
        <div class="col-lg-2 px-lg-0 my-2">
            <input class="form-control" type="number" asp-for="AmountOfPeople" placeholder="AmountOfPeople">
        </div>
        <div class="col-lg-1 px-lg-0 my-2">
            <button type="submit" class="btn btn-dark btn-sm btn-block" style="width: 100%; height: 100%">Search</button>
        </div>
    </div>

    <span asp-validation-for="ArriveDate" />
    <span asp-validation-for="DepartureDate" />
    <span asp-validation-for="LocationAddress" />
    <span asp-validation-for="AmountOfPeople" />
</form>