@model HousingOption
@{
    Layout = null;
}

<div class="hotel-header">
    <h2 class="hotel-name">@Model.Offer.Name</h2>
    <h2 class="hotel-rating">4.3</h2>
</div>
<h2>@Model.Name</h2>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @if (Model.Images.Count > 0)
        {
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        }
        else
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        }
    </ol>
    <div class="carousel-inner">
        @if (Model.Images.Count > 0)
        {
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                string tag = i == 0 ? "active" : "";

                <div class="carousel-item @tag">
                    <img class="d-block w-100" src="@Model.Images[i].Uri">
                </div>
            }
        }
        else
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/placeholder.svg">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="stats-container">
    <h3>Details</h3>
    <p>@Model.Description</p>
    <h5>Meters</h5>
    <p>@Model.MetersAmount</p>
    <h5>Amount of people</h5>
    <p>@Model.BedsAmount</p>
</div>


